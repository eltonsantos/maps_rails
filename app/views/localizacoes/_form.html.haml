= form_for @localizacao do |f|
  - if @localizacao.errors.any?
    #error_explanation
      %h2= "#{pluralize(@localizacao.errors.count, "error")} prohibited this localizacao from being saved:"
      %ul
        - @localizacao.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nome
    = f.text_field :nome
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .actions
    = f.submit 'Save'
